<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".CategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/apparel_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_apparel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/apparel"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/apparel_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/apparel_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_apparel"
                android:text="Apparel"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/beauty_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apparel_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/beauty"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beauty_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/beauty_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_beauty"
                android:text="Beauty"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shoes_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/beauty_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/shoes"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shoes_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/shoes_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_shoes"
                android:text="Shoes"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/electronics_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoes_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_electronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/electronics"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/electronics_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/electronics_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_electronics"
                android:text="Electronics"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/furniture_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/electronics_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_furniture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/furniture"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/furniture_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/furniture_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_furniture"
                android:text="Furniture"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stationary_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/furniture_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_stationary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/stationary"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stationary_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/stationary_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_stationary"
                android:text="Stationary"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stationary_card">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="149dp"
                    android:layout_height="176dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_icon" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/home_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/category_home"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>