<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    android:layout_marginBottom="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_width="367dp"
        android:layout_height="450dp"
        android:background="#F0F4F8"
        app:cardCornerRadius="34dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/order_product_image"
                android:layout_width="277dp"
                android:layout_height="304dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@color/dark"
                app:shapeAppearanceOverlay="@style/productRadius" />

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_product_image"
                android:layout_alignStart="@id/order_product_image"
                android:layout_marginTop="28dp"
                android:text="Product Name"
                android:textColor="@color/dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_product_image"
                android:layout_alignRight="@id/order_product_image"
                android:layout_marginTop="28dp"
                android:text="Price"
                android:textColor="#FF6969"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_detail_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/order_product_name"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/view_detail_button"
                android:drawableRight="@drawable/forward_button"
                android:paddingRight="18dp"
                android:text="View Detail"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>