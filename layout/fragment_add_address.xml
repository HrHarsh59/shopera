<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".AddAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_text_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"
            android:text="ADD ADDRESS"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/add_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="FULL NAME"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:padding="4dp"
            android:background="@drawable/rectengle"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/add_mobile_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="MOBILE NUMBER"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_mobile_number_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="@drawable/rectengle"
            android:inputType="number" />

        <TextView
            android:id="@+id/add_pinCode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="PINCODE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_pinCode_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="@drawable/rectengle"
            android:inputType="number" />

        <TextView
            android:id="@+id/add_flat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="FLAT, HOUSE NO., ETC"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_flat_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="@drawable/rectengle"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/add_area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="AREA"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_area_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="@drawable/rectengle"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/add_land_mark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="LAND MARK"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_land_mark_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="@drawable/rectengle"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/add_town_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:text="TOWN/CITY"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_town_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="16dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="@drawable/rectengle"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/add_address_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD YOUR ADDRESS"
            android:backgroundTint="#FE4D4D"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:layout_marginBottom="18dp"/>
    </LinearLayout>

</ScrollView>